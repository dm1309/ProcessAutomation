<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dhruvmalhotra.processautomation.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your store Login ID"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/headingTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In ID No:"
        android:layout_below="@id/headingTextView"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        android:id="@+id/loginNo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter 4 digit ID"
        android:textSize="20dp"
        android:id="@+id/edit_login_id"
        android:layout_alignBottom="@+id/loginNo"
        android:layout_alignRight="@+id/headingTextView"
        android:layout_alignEnd="@+id/headingTextView"
        android:backgroundTint="@drawable/entertext_border"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/passwdTextView"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/passwdTextView"
        android:id="@+id/edit_passwd"
        android:layout_alignBottom="@+id/passwdTextView"
        android:layout_alignRight="@+id/passwdTextView"
        android:layout_alignEnd="@+id/headingTextView"
        android:backgroundTint="@drawable/entertext_border"
        android:textSize="20dp"
        android:hint="enter store passwd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonSubmitAuth"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/loginNo"
        android:layout_toEndOf="@+id/loginNo" />
</RelativeLayout>
