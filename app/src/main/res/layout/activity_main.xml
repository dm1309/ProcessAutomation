<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/applog"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dhruvmalhotra.processautomation.MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonSubmitAuth"
        android:background="@drawable/green_button"
        android:layout_below="@+id/edit_passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Enter your store ID"
        android:id="@+id/edit_login_id"
        android:layout_marginBottom="40dp"
        android:background="@drawable/white_box"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_above="@+id/edit_passwd"
        android:layout_alignLeft="@+id/edit_passwd"
        android:layout_alignStart="@+id/edit_passwd"
        android:inputType="text"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Enter your password"
        android:id="@+id/edit_passwd"
        android:background="@drawable/white_box"
        android:inputType="textPassword"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
